<h3 style="color: darkgoldenrod;">Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>

  <p>
    <%= f.label :body, "Your Comment", :class=> "text-warning" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit',:class => "button btn btn-success" %>
  </p>
<% end %>