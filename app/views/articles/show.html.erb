<div class="center">
<p class="text-success">
  <strong><b style="color: maroon;">Title:  </b></strong>
  <%= @article.title %>
</p>

<p class="text-success">
  <strong><b style="color: maroon;">Text:  </b></strong>
  <%= @article.text  %>
</p>
<p class="text-success" >
  <strong style="color: maroon;">User:  </strong>
  <%= @article.user.username%>
</p>

<%= image_tag @article.avatar.url(:medium)%>

<h3 style="color: red;"><b>Comments</b> (<%= @article.comments.size %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments.reverse %>
<%= render partial: 'comments/form' %>
<%= link_to 'Back', articles_path,  :class => "button btn btn-primary" %>
<%= link_to 'Edit', edit_article_path(@article),:class => "button btn btn-primary" %>
</div>